---
layout: layouts/base.njk
---

<h1>My Projects</h1>

{% for project in projects %}
    <h3>{{ project.name }}</h3>
    <hr />
    
    {{ project.description | md | safe }}

    <p>Stack:</p>
    <ul>
        {% for stack in project.stack %}
            <li>{{ stack | safe }}</li>
        {% endfor %}
    </ul>

    <p>Links:</p>
    <ul>
        {% for link in project.links %}
            <li>
                <a href='{{ link.url }}' target='_blank'>{{ link.type }}</a>
            </li>
        {% endfor %}
    </ul>
{% endfor %}

<h1>GitHub Repositories</h1>

{% for repository in github.repositories %}
    <h3>{{ repository.name }}</h3>
    <hr />

    {{ repository.description }}

    <p>Stats:</p>
    <ul>
        {% for name, value in repository.stats %}
            <li>
                {{ name }}: {{ value }}
            </li>
        {% endfor %}
    </ul>

    <p>Links:</p>
    <ul>
        <li>
            <a href='{{ repository.url }}' target='_blank'>GitHub</a>
        </li>
    </ul>
{% endfor %}
