<form onsubmit="{{ function }}">
    {% for input in inputs %}
        <input 
            type={% if input.type %} "{{ input.type }}" {% else %} "text" {% endif %}
            placeholder="{{ input.name }}"
            id="{{ input.id }}"
            {% if input.required == true %} required{% endif %}
        />

        <br />
    {% endfor %}

    {% for textarea in textareas %}
        <textarea
            id="{{ textarea.id }}"
            placeholder="{{ textarea.name }}"
            value=""
            {% if textarea.required == true %} required {% endif %}
        ></textarea>
    {% endfor %}

    <br />

    <button class="button" type="submit">Submit</button>
</form>